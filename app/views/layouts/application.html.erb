	<div class="ui  tabular  menu" id="top">
		<%= link_to "Home", root_path, class: "item" %>
		<%= link_to "Posts", posts_path, class: "item" %>
		<%= link_to "Projects", projects_path, class: "item" %>
		<%= link_to "Tags", tags_path, class: "item" %>
		<!-- <a href="http://icsbear.herokuapp.com/" class=" item" ><i class='home icon'></i>Home</a>
