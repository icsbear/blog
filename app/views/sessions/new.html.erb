<div class="sixteenth wide column">
		<p class="error_message"><%= flash.now[:danger]%></p>
	<div class="ui form">
		<%= form_for(:session, url: login_path) do |f| %>
			<div class="field">
				<%= f.label :email %>
	      		<%= f.email_field :email %>
			</div>
	      
			<div class="field">
				<%= f.label :password %>
		      	<%= f.password_field :password %>
			</div>
	      	<%= f.submit "Log in", class: "ui button" %>
	    <% end %>	
	</div>
</div>
    
 